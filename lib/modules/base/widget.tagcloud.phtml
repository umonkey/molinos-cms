<?php

if (!empty($tags)) {
  print '<ul class=\'tagcloud\'>';

  foreach ($tags as $t) {
    $link = mcms::html('a', array(
      'href' => $t['__link'],
      ), $t['name']);

    print mcms::html('li', array(
      'style' => 'font-size:'. (100 + $t['percent']) .'%',
      ), $link) ."\n";
  }

  print '</ul>';
}
