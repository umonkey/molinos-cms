<?php

if (!empty($documents)) {
  foreach ($documents as $doc) {
    if (!empty($doc['teaser'])) {
      $html = '';

      if (!empty($doc['name']))
        $html .= html::em('h2', $doc['name']);

      $html .= $doc['teaser'];

      print html::em('div', array(
        'class' => 'doc-teaser',
        ), $html);
    }
  }
}
